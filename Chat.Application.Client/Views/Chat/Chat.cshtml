@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-4">
            <input type="hidden" id="chatNotificationHub" value="@TempData["ChatAppWebServiceUrl"]"/>
        </div>
        <div class="col-4">
            <input type="hidden" id="userName" value="@TempData["LoggedInUser"]"/>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <strong>Chat Room:</strong>
        </div>
        <div class="col-4">Default</div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4">
            <textarea id="messageInput" name="messageInput" rows="4" cols="50"></textarea>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <input type="button" id="sendButton" value="Send"/>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <small>Shows only last 50 messages</small>
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-6">

        <ul id="messages"></ul>
    </div>
</div>
<script src="~/js/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/chat_module.js"></script>